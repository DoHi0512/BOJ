#include <bits/stdc++.h>
#define INF 1e9*1e5
using namespace std;
using ull = unsigned long long;
using ll = long long;
int arr[100001], vis[100001], ans, n, s;
int main() {
	queue <int> que;
	cin >> n;
	for (int i = 1; i <= n; i++) {
		cin >> arr[i];
	}
	cin >> s;
	que.push(s);
	while (!que.empty()) {
		int node = que.front();
		que.pop();
		if (vis[node]) continue;
		vis[node] = true;
		ans++;
		if (node + arr[node] <= n) {
			que.push(node + arr[node]);
		}
		if (node - arr[node] > 0) {
			que.push(node - arr[node]);
		}
	}
	cout << ans;
}
